{
	https_port 4123
	servers {
		listener_wrappers {
			proxy_protocol {
				allow 127.0.0.1/32
			}
			tls
		}
	}
	auto_https disable_redirects
}

https://$NODE_DOMAIN {
	bind 127.0.0.1
	root * /srv
	file_server
	header {
		-Server
	}
	handle_errors {
		header {
			-Server
		}
	}
}

http://$NODE_DOMAIN {
	bind 0.0.0.0
	redir https://$NODE_DOMAIN{uri} permanent
	header {
		-Server
	}
	handle_errors {
		header {
			-Server
		}
	}
}

:4123 {
	tls internal
	respond 204
}

:80 {
	bind 0.0.0.0
	respond 204
}
