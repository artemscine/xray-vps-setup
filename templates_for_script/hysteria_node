listen: :$HYSTERIA_PORT

tls:
  cert: /certs/$NODE_DOMAIN.crt
  key: /certs/$NODE_DOMAIN.key
  sni: $NODE_DOMAIN

obfs:
  type: salamander
  salamander:
    password: $HYSTERIA_OBFS_PASSWORD

auth:
  type: command
  command: echo

masquerade:
  type: proxy
  proxy:
    url: https://$NODE_DOMAIN/
    rewriteHost: true

quic:
  initStreamReceiveWindow: 8388608
  maxStreamReceiveWindow: 8388608
  initConnReceiveWindow: 20971520
  maxConnReceiveWindow: 20971520
  maxIdleTimeout: 30s
  maxIncomingStreams: 1024
